<!doctype html>
<html>
<head lang="en">
    <meta charset="utf-8">
    <title>Center for Small Towns Database System</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="addRecord.js"></script>
</head>
<body ng-app="addRecord" ng-controller="addRecordCtrl">
  <div>
      <img src="CSTlogo.png" class="backgroundImage"/>
  </div>
  <h1 class="heading">Centers for Small Towns<br>
      Database System</h1>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/studentWorkers">Student Workers</a></li>
    <li><a href="/currentProject">Current Projects</a></li>
    <li><a href="/organization">Organization</a></li>
    <li><a class="active" href="/addRecord">Add Record</a></li>
    <li><a href="/logout">Log-Out</a></li>
  </ul>
  <div>
    <br>
    Student Last Name: <input ng-model="studentLastName"></input><br>
    <br>
    Student First Name: <input ng-model="studentFirstName"></input><br>
    <br>
    Student Email: <input ng-model="studentEmailAddress"></input><br>
    <br>
    Student City: <input ng-model="studentCity"></input><br>
    <br>
    Student State: <input ng-model="studentState"></input><br>
    <br>
    Student Country: <input ng-model="studentCountry"></input><br>
    <br>
    Student Graduation Date: <input ng-model="studentGraduationYear"></input><br>
    <br>
    Student Major: <input ng-model="studentMajor"></input><br>
    <br>
    Project Status: <input ng-model="projectStatus"></input><br>
    <br>
    Project Title: <input ng-model="projectTitle"></input><br>
    <br>
    Project Start Date: <input ng-model="project_start_date"></input><br>
    <br>
    Project End Date: <input ng-model="project_end_date"></input><br>
    <br>
    Project Intensity: <input ng-model="projectIntensity"></input><br>
    <br>
    Project Description: <input ng-model="projectDescription"></input><br>
    <br>
    Project Funding: <input ng-model="projectFunding"></input><br>
    <br>
    Project Status: <input ng-model="projectStatusStatus"></input><br>
    <br>
    Project Link: <input ng-model="projectLink"></input><br>
    <br>
    Project Synopsis: <input ng-model="projectSynopsis"></input><br>
    <br>
    Project Methodology: <input ng-model="projectMethodology"></input><br>
    <br>
    <center><button type="button" class="btn btn-primary btn-lg" ng-click="storeToDatabase($event)">
       Insert Into Database
    </button></center>
    <!-- <br>
    <br>
    <center><button type="button" class="btn btn-primary btn-lg"  ng-click="scrollDownStudentWorkers($event)">
       Assign Project to Current Student Worker
    </button></center> -->
  </div>
  <!-- <div ng-hide="bool">

  </div> -->
</body>
<style>
  h1.heading {
    font-family: Courier;
    font-size: 50px;
    float: top;
    margin: 0 0 30px 0;
    padding: 5px 0 0 0;
    width: 50%;
  }
  .backgroundImage{
    position: absolute;
    width: 390px;
    height: 145px;
    top: 0px;
    right: 0px;
  }
  ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #333;
  }
  li {
      float: left;
  }
  li a {
      display: block;
      color: white;
      text-align: center;
      padding: 14px 50px;
      text-decoration: none;
      font-size: 30px;
  }
  li a:hover:not(.active) {
      background-color: #111;
  }
  .active {
      background-color: #4CAF50;
  }
</style>
</html>
