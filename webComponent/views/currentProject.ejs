<!doctype html>
<html>
<head lang="en">
    <meta charset="utf-8">
    <title>Center for Small Towns Database System</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="currentProject.js"></script>
</head>
<body ng-app="projects" ng-controller="projectCtrl">
  <div>
      <img src="CSTlogo.png" class="backgroundImage"/>
  </div>
  <h1 class="heading">Centers for Small Towns<br>
      Database System</h1>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/studentWorkers">Student Workers</a></li>
    <li><a class="active" href="/currentProject">Current Projects</a></li>
    <li><a href="/organization">Organization</a></li>
    <li><a href="/archive">Archive</a></li>
    <li><a href="/logout">Log-Out</a></li>
  </ul>
  <br>
  <div ng-show="bool">
    <select ng-model="selectedSearchTerm" style="margin-left:20px">
        <option ng-repeat="term in searchTerms" value="{{term.term}}">{{term.term}}</option>
    </select>
    <input type="text" placeholder="Search Term" ng-model="searchTerm">
    <button ng-click="queryStudentWorkers($event, selectedSearchTerm, searchTerm);">
      Search
    </button>
    <table style="align:center;margin-left:20px;height:450px;margin-top:10px">
      <tr>
        <th>Project Status</th>
        <th>Project Title</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Project Intensity</th>
        <th>Description</th>
      </tr>
      <tr ng-repeat="project in currentProjects">
          <td> {{project["Project Status"]}} </td>
          <td> {{project["Project Title"]}} </td>
          <td> {{project["Start Date"]}} </td>
          <td> {{project["End Date"]}} </td>
          <td> {{project["Project Intensity"]}} </td>
          <td><textarea ng-model="project['Description']" rows="3" cols="50" style="border:solid 0px black;overflow:hidden;resize:none";></textarea> </td>
          <td class ="buttonToMakeChanges">
            <button style="width:100px;height:28px" class="btn btn-success" id="{{project.projectID}}" ng-click="openQuery($event, project.projectID, project['Project Status'], project['Project Title']
              , project['Start Date'], project['End Date'], project['Project Intensity'], project['Description'], project['Funding Type'], project['Status']
              , project['Link to Project'], project['Project Synopsis Link'], project['Methodology']);">
                View
            </button>
          </td>
      </tr>
    </table>
    <!-- <br>
    <button type="button" class="btn btn-default btn-sm" style="margin-left:20px" ng-click="scrollUpStudentWorkers($event)">
        <span class="glyphicon glyphicon-upload"></span> Scroll-up
    </button>
    <button type="button" class="btn btn-default btn-sm"  ng-click="scrollDownStudentWorkers($event)">
        <span class="glyphicon glyphicon-download"></span> Scroll-down
    </button> -->
  </div>
  <div ng-hide="bool" style="margin-left:30px" ng-repeat="info in individualProject">
    <br>
    Project Status: <input ng-model="tempProject_Status" placeholder={{projectProjectStatus}}></input><br>
    <br>
    Project Title: <input ng-model="tempProject_Title" placeholder={{projectTitle}}></input><br>
    <br>
    Project Start Date: <input ng-model="tempProject_StartDate" placeholder={{projectStartDate}}></input><br>
    <br>
    Project End Date: <input ng-model="tempProject_EndDate" placeholder={{projectEndDate}}></input><br>
    <br>
    Project Intensity: <input ng-model="tempProject_Intensity" placeholder={{projectIntensity}}></input><br>
    <br>
    Project Funding Type: <input ng-model="tempProject_FundingType" placeholder={{projectFundingType}}></input><br>
    <br>
    Project Status: <input ng-model="tempProjectStatus" placeholder={{projectStatus}}></input><br>
    <br>
    Project Link to Project: <input ng-model="tempProject_LinkToProject" placeholder={{projectLinktoProject}}></input><br>
    <br>
    Synopsis Link: <input ng-model="tempProject_LinkToProject" placeholder={{projectSynopsisLink}}></input><br>
    <br>
    Project Methodology: <input ng-model="tempProject_LinkToProject" placeholder={{projectMethodology}}></input><br>
    <br>
    Project Description:
    <br>
    <textarea ng-repeat="info in individualProject" ng-model=projectDescription rows="4" cols="50"></textarea><br>
    <br>
    <button style="width:100px;height:28px" class="btn btn-success" ng-click="saveChangestoStudentWorkers($event);">
        Save
    </button>
    <button style="width:100px;height:28px" class="btn btn-danger" ng-click="warning_box($event);">
        Delete
    </button>
  </div>
</body>
<style>

  table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
    padding: 3px;
    text-align: center;
    width: 1750px;
  }
  h1.heading {
    font-family: Courier;
    font-size: 50px;
    float: top;
    margin: 0 0 30px 0;
    padding: 5px 0 0 0;
    width: 50%;
  }
  .backgroundImage{
    position: absolute;
    width: 390px;
    height: 145px;
    top: 0px;
    right: 0px;
  }
  ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #333;
  }
  li {
      float: left;
  }
  li a {
      display: block;
      color: white;
      text-align: center;
      padding: 14px 50px;
      text-decoration: none;
      font-size: 30px;
  }
  li a:hover:not(.active) {
      background-color: #111;
  }
  .active {
      background-color: #4CAF50;
  }
</style>
</html>
