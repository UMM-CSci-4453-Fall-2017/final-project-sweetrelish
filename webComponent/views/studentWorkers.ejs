<!doctype html>
<html>
<head lang="en">
    <meta charset="utf-8">
    <title>Student Workers</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.4/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="click.js"></script>
</head>
<body ng-app="buttons" ng-controller="buttonCtrl">
  <div>
      <img src="CSTlogo.png" class="backgroundImage"/>
  </div>
  <h1 class="heading">Centers for Small Towns<br>
      Database System</h1>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a class="active" href="/studentWorkers">Student Workers</a></li>
    <li><a href="/currentProject">Current Projects</a></li>
    <li><a href="/organization">Organization</a></li>
    <li><a href="/archive">Archive</a></li>
    <li><a href="/logout">Log-Out</a></li>
  </ul>
  <br>
  <div ng-show="bool">
    <select ng-model="selectedSearchTerm" style="margin-left:20px">
        <option ng-repeat="term in searchTerms" value="{{term.term}}">{{term.term}}</option>
    </select>
    <input type="text" placeholder="Search Term" ng-model="searchTerm">
    <button ng-click="queryStudentWorkers($event, selectedSearchTerm, searchTerm);">
      Search
    </button>

    <table style="align:center;margin-left:20px;height:450px;margin-top:10px">
      <tr>
        <th>studentID</th>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Email Address</th>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
        <th>Graduation Year</th>
        <th>Major</th>
      </tr>
      <tr ng-repeat="studentWorker in studentWorkers">
          <td> {{studentWorker.studentID}} </td>
          <td> {{studentWorker["Last Name"]}} </td>
          <td ng-model="studentFirstName"> {{studentWorker["First Name"]}} </td>
          <td ng-model="studentEmailAddress"> {{studentWorker["Email Address"]}} </td>
          <td ng-model="studentCity"> {{studentWorker.City}} </td>
          <td ng-model="studentState"> {{studentWorker.State}} </td>
          <td ng-model="studentCountry"> {{studentWorker.Country}} </td>
          <td ng-model="studentGraduationYear"> {{studentWorker["Graduation Year"]}} </td>
          <td ng-model="studentMajor"> {{studentWorker.Major}} </td>
          <td class ="buttonToMakeChanges">
            <button style="width:100px;height:28px" class="btn btn-success" id="{{studentWorker.studentID}}" ng-click="openQuery($event, studentWorker.studentID, studentWorker['Last Name']);">
                View
            </button>
          </td>
      </tr>
    </table>
    <br>
    <button type="button" class="btn btn-default btn-sm" style="margin-left:20px" ng-click="scrollUpStudentWorkers($event)">
        <span class="glyphicon glyphicon-upload"></span> Scroll-up
    </button>
    <button type="button" class="btn btn-default btn-sm"  ng-click="scrollDownStudentWorkers($event)">
        <span class="glyphicon glyphicon-download"></span> Scroll-down
    </button>
  </div>
  <div ng-hide="bool" style="margin-left:30px">
    <input ng-repeat="student in individualStudentInfo" ng-model="tempStudentID" placeholder={{studentID}}></input><br>
    <br>
    <input ng-repeat="student in individualStudentInfo" ng-model="tempstudentLast_Name" placeholder={{studentLastName}}></input><br>
    <br>
    <input ng-repeat="student in individualStudentInfo" ng-model="tempstudentFirst_Name" placeholder={{studentFirstName}}></input><br>
    <br>
    <input ng-repeat="student in individualStudentInfo" ng-model="tempstudentEmailAddress" placeholder={{studentEmailAddress}}></input><br>
    <br>
    <input ng-repeat="student in individualStudentInfo" ng-model="tempstudentCity" placeholder={{studentCity}}></input><br>
    <br>
    <input ng-repeat="student in individualStudentInfo" ng-model="tempstudentState" placeholder={{studentState}}></input><br>
    <br>
    <input ng-repeat="student in individualStudentInfo" ng-model="tempstudentCountry" placeholder={{studentCountry}}></input><br>
    <br>
    <input ng-repeat="student in individualStudentInfo" ng-model="tempstudentGraduationYear" placeholder={{studentGraduationYear}}></input><br>
    <br>
    <input ng-repeat="student in individualStudentInfo" ng-value="student['Project Title']"></input><br>
    <br>
    <button style="width:100px;height:28px" class="btn btn-success" ng-click="saveChangestoStudentWorkers($event);">
        Save
    </button>
  </div>
</body>
<style>

  table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
    padding: 3px;
    text-align: center;
    width: 1650px;
  }
  h1.heading {
    font-family: Courier;
    font-size: 50px;
    float: top;
    margin: 0 0 30px 0;
    padding: 5px 0 0 0;
    width: 50%;
  }
  .backgroundImage{
    position: absolute;
    width: 390px;
    height: 145px;
    top: 0px;
    right: 0px;
  }
  ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #333;
  }
  li {
      float: left;
  }
  li a {
      display: block;
      color: white;
      text-align: center;
      padding: 14px 50px;
      text-decoration: none;
      font-size: 30px;
  }
  li a:hover:not(.active) {
      background-color: #111;
  }
  .active {
      background-color: #4CAF50;
  }
</style>
</html>
